#!/bin/sh
# postinst script for esetools

case "$1" in
    configure)
	if [ ! -f /etc/esegend.conf ] ; then
	    if [ -f /usr/share/esetools/esegend-sample.conf ] ; then
		cp /usr/share/esetools/esegend-sample.conf /etc/esegend.conf
	    fi
	fi
	if [ -x /bin/systemctl ] ; then
	    /bin/systemctl daemon-reload
	    if [ -f /usr/lib/systemd/system/esegen.service ] ; then
		/bin/systemctl start esegen.service
		/bin/systemctl enable esegen.service
	    fi
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
